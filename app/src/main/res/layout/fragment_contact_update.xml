<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/loginLinearLayout"
        android:padding="35sp"
        android:layout_gravity="top">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Contact Info"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="18sp"
            android:layout_marginTop="15sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            />

        <EditText
            android:id="@+id/updateContactFirstName"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:hint="John"
            android:textCursorDrawable="@null"
            android:paddingLeft="10sp"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="@color/cream"
            android:textColor="@color/blueGradient"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            />

        <EditText
            android:id="@+id/updateContactLastName"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:hint="Michale"
            android:textCursorDrawable="@null"
            android:paddingLeft="10sp"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="@color/cream"
            android:textColor="@color/blueGradient"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            />

        <EditText
            android:id="@+id/updateContactNo"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:hint="123456"
            android:textCursorDrawable="@null"
            android:paddingLeft="10sp"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/edit_text_background"
            android:textColorHint="@color/cream"
            android:textColor="@color/blueGradient"
            />

        <Button
            android:id="@+id/updateContactInfo"
            android:layout_width="150sp"
            android:layout_height="35sp"
            android:background="@drawable/button_background"
            android:text="Update"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:textColor="@color/blueGradient"/>


    </LinearLayout>

</FrameLayout>